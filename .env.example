POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n
POSTGRES_DB=n8n
TZ=Europe/Kyiv

# Public URL for webhooks and editor (behind Cloudflare Tunnel)
N8N_WEBHOOK_URL=https://your-n8n-domain.example.com
N8N_EDITOR_BASE_URL=https://your-n8n-domain.example.com
WEBHOOK_URL=https://your-n8n-domain.example.com

# n8n application secret (set to a long random string in your real .env)
ENCRYPTION_KEY=CHANGE_ME_GENERATED

# Cloudflare Tunnel token (from Cloudflare dashboard)
CLOUDFLARED_TOKEN=CHANGE_ME

# Telegram bot token (BotFather)
TELEGRAM_TOKEN=CHANGE_ME

# Trust proxy headers when running behind Cloudflare
N8N_TRUSTED_PROXIES=0.0.0.0/0,::/0

# Optional: enable task runners (recommended by newer n8n versions)
# N8N_RUNNERS_ENABLED=true

# Optional: enforce settings file permissions
# N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
